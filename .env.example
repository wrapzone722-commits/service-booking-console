# Example environment variables for ServiceBooking
# Copy to .env and fill values

NODE_ENV=production
PORT=3000
JWT_SECRET=replace_with_strong_secret
API_BASE_URL=https://your-domain.com/api/v1

# OpenAI (if using assistant)
OPENAI_API_KEY=

# Yandex OAuth
YANDEX_CLIENT_ID=
YANDEX_CLIENT_SECRET=
YANDEX_REDIRECT_URI=https://your-domain.com/auth/yandex/callback

# Database (Postgres)
DATABASE_URL=postgres://postgres:postgres@localhost:5432/servicebooking

# SMTP для писем с кодом подтверждения (отправляются от wrapzone@yandex.ru)
SMTP_HOST=smtp.yandex.ru
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=wrapzone@yandex.ru
SMTP_PASS=
# От кого приходит письмо (в коде по умолчанию: wrapzone@yandex.ru)
SMTP_FROM_NAME=ServiceBooking
SMTP_FROM_EMAIL=wrapzone@yandex.ru

# SMS (optional)
SMS_API_KEY=
SMS_SENDER=ServiceBooking

# Секретный мастер-код верификации (ввод вместо кода из письма — даёт пройти авторизацию)
SECRET_VERIFICATION_CODE=230490

# Other
NODE_OPTIONS=--max-old-space-size=512
